using Toybox.ActivityMonitor;

class hrRenderer {
var _dc;
public var width;
public var height;
public var fgColor;
public var bgColor;
public var noOfsamples;

 

function initialize (dc) {
_dc = dc;

}

function getHrHistory() {

var rawHr = new[120];
 
var currenth = new Gregorian.Moment(Time.now().value());
	 


for( var i = 0; i < rawHr.size(); i++ )
{
var moment = currenth - new Time.Duration(120-i);
 rawHr[i] = new ActivityMonitor.HeartRateSample(moment);
}


}	


}